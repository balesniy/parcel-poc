extends ./layout

include components/counter/counter
include components/text-field/text-field
include components/dropdown/dropdown
include components/checkbox/checkbox
include components/radio/radio
include components/toggle/toggle
include components/rating/rating
include components/range/range
include components/pagination/pagination
include components/button/button
include components/nav-bar/nav-bar
include components/footer/footer
include components/rooms-search/rooms-search
include components/sign-up/sign-up
include components/login/login

block title
    | index page

block header
    +nav-bar
    +nav-bar('Юлий Цезарь')

block main
    +rooms-search
    +sign-up
    +login
    +text-field('Text Field', 'Email', 'Default')
    +text-field('Text Field', 'Some text', 'Hover / Focus')(value='This is pretty awesome')
    +dropdown('Сколько гостей', 'dropdown')
        +counter('Спальни', 2)
        +counter('кровати', 2)
        +counter('ванные комнаты', 0)
    +range('Range Slider', '5 000₽ - 10 000₽')
    +pagination('pagination')
    +button('CLICK ME', 'primary')
    +button('CLICK ME', 'default')
    +button('CLICK ME', 'link')
    +checkbox('Завтрак')
    +checkbox('Письменный стол', true)

    .sex
        +radio('Мужчина', 'sex', true)
        +radio('Женщина', 'sex')
    +toggle('Получать спецпредложения', 'accept')
    +rating('rate button', 4)
    +rating(null, 5, 'name', 10)

    .container
        +counter('Спальни', 2)
        +counter('Ванные комнаты', 1)
        .dummy
            | lorem ipsum

block footer
    +footer

