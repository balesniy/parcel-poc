include ../dropdown/dropdown
include ../button/button

mixin rooms-search()
    section.rooms-search
        h2.rooms-search__title Найдём номера под ваши пожелания
        form
            .rooms-search__dates-wrapper
                +dropdown('ДД.ММ.ГГГГ', 'прибытие')
                +dropdown('19.08.2019', 'выезд')
            +dropdown('Сколько гостей', 'гости')
            .rooms-search__submit-wrapper
                +button('подобрать номер', 'wide')
